# ===================================
# ProfitFlow - Environment Variables
# ===================================

# === BAZA DANYCH ===
# MySQL connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://profitflow:your_password@localhost:3306/profitflow"

# Dla Docker Compose (jeśli używasz lokalnej bazy MySQL w kontenerze)
# DATABASE_URL="mysql://profitflow:profitflow_password_change_me@db:3306/profitflow"

# Dla TiDB Cloud
# DATABASE_URL="mysql://user.root:password@gateway01.eu-central-1.prod.aws.tidbcloud.com:4000/profitflow?ssl={\"minVersion\":\"TLSv1.2\",\"rejectUnauthorized\":true}"

# === DOCKER (tylko dla docker-compose) ===
MYSQL_ROOT_PASSWORD="root_password_change_me"
MYSQL_PASSWORD="profitflow_password_change_me"

# === JWT SECRET ===
# Wygeneruj silny losowy string (min. 64 znaki)
# Użyj: openssl rand -base64 48
JWT_SECRET="WYGENERUJ_LOSOWY_STRING_64_ZNAKI_TUTAJ"

# === OAUTH (opcjonalne - jeśli nie używasz Manus OAuth, zostaw puste) ===
OAUTH_SERVER_URL=""
VITE_OAUTH_PORTAL_URL=""
VITE_APP_ID=""

# === WŁAŚCICIEL APLIKACJI ===
OWNER_OPEN_ID="admin"
OWNER_NAME="Administrator"

# === APLIKACJA ===
VITE_APP_TITLE="ProfitFlow"
VITE_APP_LOGO="/logo.svg"
NODE_ENV="production"
PORT=3000

# === ANALYTICS (opcjonalne) ===
VITE_ANALYTICS_WEBSITE_ID=""
VITE_ANALYTICS_ENDPOINT=""

# === FORGE API (opcjonalne - tylko jeśli używasz Manus) ===
BUILT_IN_FORGE_API_URL=""
BUILT_IN_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_URL=""

# === INNE ===
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Session cookie settings
SESSION_COOKIE_NAME="profitflow_session"
SESSION_COOKIE_MAX_AGE=2592000000

# CORS origins (oddzielone przecinkami)
CORS_ORIGINS="http://localhost:3000,https://twoja-domena.pl"
